% LaTeX resume using res.cls
\documentclass[margin]{res}

% set up fonts
\usepackage[LGR,T1]{fontenc}
\usepackage{helvetica}
% \usepackage{tgheros} % if helvetica.sty is not available
\usepackage{tgpagella}
\usepackage{pifont}

\usepackage{setspace}

\setlength{\textwidth}{5.1in} % set width of text portion

% this value may need to be adjusted as content is added or removed.
\setlength{\parskip}{8pt}


% DRY
\newcommand{\widerule}{\moveleft\hoffset\vbox{\hrule width\resumewidth height 0.1pt}}
\newcommand{\sectionspace}{\vspace{8pt}}
\renewcommand{\labelitemi}{\scriptsize\ding{93}}

\begin{document}
\small
% Name and subtitle, left-aligned
\moveleft\hoffset\vbox{
  \LARGE
    \textbf{\textsf{<%= @resume.particulars.name.join(' ').le %>}}
    \textrm{ \textit{<%= @resume.particulars.tagline.le %>}}
  }\bigskip\smallskip %\bigskip wasn't quite enough

% Contact information box
 \widerule\bigskip
 \moveleft1.06\hoffset\vbox{

  <% @contact = @resume.particulars.contact %>
  \begin{tabular}{l@{\hspace{.70in}}l@{\hspace{.4in}}|@{\hspace{.4in}}l@{\hspace{.50in}}l}
    \textbf{\textsf{Address:}} & <%= @contact.address.street.le %>  & \textbf{\textsf{Telephone:}}  & <%= @contact.telephone.le %>               \\
                      & <%= @contact.address.street2.le %>                & \textbf{\textsf{E-mail:}}      & <%= @contact.email.le %>            \\
                      & <%= @contact.address.city.le %>, <%= @contact.address.state.le %> <%= @contact.address.zipcode.le %>   & \textbf{\textsf{Website:}} & <%= @contact.websites.map{|w|w.le}.join("#{/\\/.source} \& \& \& ") %>
  \end{tabular}}
  \bigskip\widerule

\begin{resume}\setstretch{1}

\section{\textsf{Skills}}

              <% @resume.skills.each do |category| %>
                \textbf{\textit{<%= category.category.le %>:}} <%= category.skills.join(', ').le %>  \\<% end %>
\sectionspace

\section{\textsf{Education}}
              <% @resume.education.each do |ed| %>
                \textbf{\textit{<%= ed.degree.type %>} in <%= ed.degree.major %> \dotfill <%= ed.degree.conferred %> }  \\
                <%= "Minor in #{ed.degree.minor}" if ed.degree.minor %><%= "Emphasis in #{ed.degree.emphasis}" if ed.degree.emphasis %> \hfill  \textsc{<%= ed.school %>}
              <% end %>
\sectionspace


\section{\textsf{Relevant \\ Experience}}

              <% @resume.experience.each do |company| %>
                \textbf{\textit{<%= company.title.le %>}
                 at \textsc{<%= company.name.le %>} in <%= company.contact.address.city.le %>, <%= company.contact.address.state.le %>\dotfill <%= company.date.start.year.le %>--<%= company.date.end.year.le %>}
                 \vspace{-10pt}\begin{itemize} \itemsep -2pt %reduce space between items <% company.points.each do |point| %>
                   \item <%= point.le %>
                 <% end %>\end{itemize}
              <% end %>

\sectionspace


\section{\textsf{Endorsements}}

              <% @resume.endorsements.each do |endorsement| %>
                ``<%= endorsement.body.le %>''                    \\
                \textit{-- <%= endorsement.from.name.le %>,} <%= endorsement.from.rel.le %>
              <% end %>

\sectionspace


\sectionspace


\textit{\textbf{\footnotesize Contact information for personal and professional references is available upon request.}}


\end{resume}
\end{document}