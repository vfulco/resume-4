% LaTeX resume using res.cls
\documentclass[margin]{res}

% set up fonts
\usepackage[LGR,T1]{fontenc}
\usepackage{fontspec}
\setromanfont{Proxima Nova}

\usepackage{setspace}

\setlength{\textwidth}{5.1in} % set width of text portion

% this value may need to be adjusted as content is added or removed.
\setlength{\parskip}{8pt}


% DRY
\newcommand{\widerule}{\moveleft\hoffset\vbox{\hrule width\resumewidth height 0.1pt}}
\newcommand{\sectionspace}{\vspace{8pt}}
\renewcommand{\labelitemi}{\scriptsize\ding{93}}

\begin{document}
\small
% Name and subtitle, left-aligned
\moveleft\hoffset\vbox{
  \Huge
    \textbf{<%= @resume.particulars.name.join(' ').le %>} \\
  \LARGE
    \textrm{<%= @resume.particulars.tagline.le %>}
  }\bigskip\smallskip %\bigskip wasn't quite enough

% Contact information box
 \bigskip
 \moveleft1.06\hoffset\vbox{

  <% @contact = @resume.particulars.contact %>
  \begin{tabular}{l@{\hspace{.80in}}l@{\hspace{.8in}}l@{\hspace{.4in}}l@{\hspace{.50in}}l}
    \textbf{Address:} & <%= @contact.address.street.le %>  & \textbf{Telephone:}  & <%= @contact.telephone.le %>               \\
                      & <%= @contact.address.street2.le %>                & \textbf{E-mail:}      & <%= @contact.email.le %>            \\
                      & <%= @contact.address.city.le %>, <%= @contact.address.state.le %> <%= @contact.address.zipcode.le %>   & \textbf{Website:} & <%= @contact.websites.map{|w|w.le}.join("#{/\\/.source} \& \& \& ") %>
  \end{tabular}}
  \bigskip

\begin{resume}\setstretch{1}

\section{Skills}

              <% @resume.skills.each do |category| %>
                \textbf{<%= category.category.le %>:} <%= category.skills.join(', ').le %>  \\<% end %>
\sectionspace

\section{Education}
              <% @resume.education.each do |ed| %>
                \textbf{<%= ed.degree.type %> in <%= ed.degree.major %> \dotfill <%= ed.degree.conferred %> }  \\
                <%= "Minor in #{ed.degree.minor}" if ed.degree.minor %><%= "Emphasis in #{ed.degree.emphasis}" if ed.degree.emphasis %> \hfill  \textsc{<%= ed.school %>}
              <% end %>
\sectionspace


\section{Relevant \\ Experience}

              <% @resume.experience.each do |company| %>
                \textbf{<%= company.title.le %>
                 at \textsc{<%= company.name.le %>} in <%= company.contact.address.city.le %>, <%= company.contact.address.state.le %>\dotfill <%= company.date.start.year.le %>--<%= company.date.end.year.le %>}
                 \vspace{-10pt}\begin{itemize} \itemsep -2pt %reduce space between items <% company.points.each do |point| %>
                   \item <%= point.le %>
                 <% end %>\end{itemize}
              <% end %>

\sectionspace


\section{Endorsements}

              <% @resume.endorsements.each do |endorsement| %>
                ``<%= endorsement.body.le %>''                    \\
                -- <%= endorsement.from.name.le %>, <%= endorsement.from.rel.le %>
              <% end %>

\sectionspace


\sectionspace


\textbf{\footnotesize Contact information for personal and professional references is available upon request.}


\end{resume}
\end{document}